[alias]
    unstage = reset -q HEAD --
    summary = status -u -s
    untrack = rm -r --cached
    prestage = diff
    precommit = diff --cached

    graph = log --graph

    branches = branch -a
    rm-remote-branch = !git push --delete origin

    stashes = stash list
    tags = tag
    remotes = remote -v
    
    aliases = "!git config --list | grep -oP 'alias\\.\\K.*'"
    common-ancestor = "!f() { git merge-base \"$1\" \"${2-HEAD}\"; }; f" 

