    email = bgusach@gmail.com
    useConfigOnly = true
    signingKey = 399F0E54

[core]
    editor = vim
    excludesfile = ~/.gitignore-global
    pager = delta
    autocrlf = input

[delta]
    line-numbers = true
    navigate = true
    features = decorations
    # side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[interactive]
    diffFilter = delta --color-only --features=interactive

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[merge]
    conflictstyle = diff3

[diff]
    # Diffs more suitable for humans
    algorithm = histogram
    indentHeuristic = true

[push]
    # Avoid the usual --set-upstream
    autoSetupRemote = true

[remote "origin"]
    prune = true

[alias]
    unstage = reset -q HEAD --
    summary = status -u -s
    untrack = rm -r --cached
    precommit = diff --cached

    graph = log --graph

    branches = branch -a
    rm-remote-branch = !git push --delete origin

    stashes = stash list
    tags = tag
    remotes = remote -v
    
    aliases = "!git config --list | grep -oP 'alias\\.\\K.*'"
    common-ancestor = "!f() { git merge-base \"$1\" \"${2-HEAD}\"; }; f" 

[commit]
    gpgsign = false

[include]
    # Optional additional file for local deviations.
    path = ~/.gitconfig-additional

[credential]
    helper = /usr/local/bin/git-credential-manager
    credentialStore = secretservice

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
