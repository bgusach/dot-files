[user]
    useConfigOnly = true

[credential]
    helper = cache --timeout=3600

[core]
    editor = vim
    excludesfile = ~/.gitignore-global

[alias]
    unstage = reset -q HEAD --
    discard = checkout --
    amend = commit --amend
    summary = status -u -s
    graph = log --graph -10 --remotes --tags  --format=format:'%Cgreen%h %Creset%<(30,trunc)%s (%cN, %ar) %Cred%d' --date-order
    history = log -10 --format=format:'%Cgreen%h %Creset%s (%aN, %ar)'
    rm-branch = branch -d
    rm-remote-branch = git push --delete origin

    branches = branch -a
    switch = "!f() { git checkout $1 2>/dev/null || git checkout -b $1; }; f"
    tags = tag
    remotes = remote -v
    untrack = rm -r --cached
    nevermind = !git reset --hard HEAD && git clean -d -f
    filelog = log -u
    diffy = diff --word-diff=color --indent-heuristic
    prestage = !git diffy
    precommit = !git diffy --cached
    
    aliases = "!git config --list | grep -oP 'alias\\.\\K.*'"

