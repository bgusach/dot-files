[user]
    useConfigOnly = true

[credential]
    helper = cache --timeout=3600

[core]
    editor = vim
    excludesfile = ~/.gitignore-global

[diff]
    indentHeuristic = true

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[alias]
    unstage = reset -q HEAD --
    discard = checkout --
    amend = commit --amend
    summary = status -u -s
    untrack = rm -r --cached
    nevermind = !git reset --hard HEAD && git clean -d -f
    prestage = diff
    precommit = diff --cached
    go-back = reset --soft HEAD~1

    history = log -10 --tags --date-order --format=format:'%C(auto)%h %d %C(cyan)[%<(8,trunc)%aN] %C(auto)%s'
    graph = !git history --graph --branches
    remote-graph = !git history --graph --remotes
    filelog = log -u

    branches = branch -a
    rm-branch = branch -d
    rm-remote-branch = !git push --delete origin

    stashes = stash list
    switch = "!f() { git checkout $(git show-ref --verify --quiet refs/heads/\"$1\" || echo '-b') \"$1\"; }; f"
    tags = tag
    remotes = remote -v
    
    aliases = "!git config --list | grep -oP 'alias\\.\\K.*'"

