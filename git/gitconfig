[user]
    useConfigOnly = true

[credential]
    helper = cache --timeout=3600

[core]
    editor = vim
    excludesfile = ~/.gitignore-global

[diff]
    indentHeuristic = true

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[alias]
    unstoge = reset -q HEAD --
    discard = checkout --
    amend = commit --amend
    summary = status -u -s
    graph = log --graph -10 --remotes --tags  --format=format:'%Cgreen%h %Creset%<(30,trunc)%s (%cN, %ar) %Cred%d' --date-order
    history = log -10 --format=format:'%Cgreen%h %Creset%s (%aN, %ar)'
    rm-branch = branch -d
    rm-remote-branch = git push --delete origin

    branches = branch -a

    # Create branch if it does not exist, and check it out
    switch = "!f() { git checkout $(git show-ref --verify --quiet refs/heads/\"$1\" || echo '-b') \"$1\"; }; f"
    tags = tag
    remotes = remote -v
    untrack = rm -r --cached
    nevermind = !git reset --hard HEAD && git clean -d -f
    filelog = log -u
    prestage = diff
    precommit = diff --cached
    
    aliases = "!git config --list | grep -oP 'alias\\.\\K.*'"

